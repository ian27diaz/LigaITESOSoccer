<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_equipo_nombreEquipo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fragment_equipo_teamname"
        android:textAlignment="center"
        android:textSize="28sp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fragment_equipo_logoEquipo"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_equipo_nombreEquipo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/barcelonalogo"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fragment_equipo_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fragment_equipo_logoEquipo"
        />
</androidx.constraintlayout.widget.ConstraintLayout>