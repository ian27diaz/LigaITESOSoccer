<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/login_image_iteso"
        android:layout_width="350dp"
        android:layout_height="350dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@mipmap/ic_ladyfutbol_foreground"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_iniciar"
        android:text="@string/login_fut_ingresa"
        android:textColor="@android:color/white"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:background = "@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_image_iteso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_darDeAlta"
        android:text="@string/login_fut_crearequipo"
        android:textColor="@android:color/white"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:background = "@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_iniciar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />



</androidx.constraintlayout.widget.ConstraintLayout>